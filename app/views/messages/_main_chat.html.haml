.chat-main 
  .chat-main__group-info
    .group-info__left
      .left__group-name
      .left__member
    .group-info__right
      = link_to "#", class: "contents__btn" do
        Edit
  .chat-main__message-list
    .message-list__left
      .message-box
        .message-box__group-name
          .daytime
        .message-box__message
      .message-box
        .message-box__group-name
          .daytime
        .message-box__message

  .chat-main__message-form
    .message-form__contents
      .message-box
      %label{class: "input-box__image"}
        = icon('fas', 'image')
        %input{type: "file", class: "input_none"}
    .message-form__btn
      = link_to "#", class: "contents__btn" do
        Send